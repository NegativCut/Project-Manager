<Window x:Class="ProjectManager.NewProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Project" Height="450" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#FF1E1E1E">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="CaretBrush" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#FF0E639C"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="#FF252526"/>
        </Style>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Project Information" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Project Number:" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Name="txtProjectNumber" VerticalAlignment="Center" 
                           Margin="5" FontWeight="Bold"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Project Name:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="txtProjectName" Margin="5" Height="25"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="Status" Margin="0,0,0,10">
            <ComboBox Name="cmbStatus" Margin="10" Height="25">
                <ComboBoxItem Content="Planning" IsSelected="True"/>
                <ComboBoxItem Content="In Progress"/>
                <ComboBoxItem Content="Review"/>
                <ComboBoxItem Content="Complete"/>
                <ComboBoxItem Content="On Hold"/>
            </ComboBox>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Select Applications to Use" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Name="pnlApps" Margin="10"/>
            </ScrollViewer>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnOK" Content="Create Project" Width="120" Height="30" Margin="5" Click="BtnOK_Click"/>
            <Button Name="btnCancel" Content="Cancel" Width="100" Height="30" Margin="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
