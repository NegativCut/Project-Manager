<Window x:Class="ProjectManager.NewRevisionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Revision" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#FF1E1E1E">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="#FF252526"/>
        </Style>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="New Revision Information" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Base Project:" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Name="txtBaseProject" VerticalAlignment="Center" 
                           Margin="5" FontWeight="Bold"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="New Revision:" VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Name="txtNewRevision" VerticalAlignment="Center" 
                           Margin="5" FontWeight="Bold" Foreground="#FF4EC9B0"/>
            </Grid>
        </GroupBox>

        <TextBlock Grid.Row="1" Text="Select which app folders to copy files from:" 
                   Margin="0,0,0,5" FontWeight="Bold"/>

        <GroupBox Grid.Row="2" Header="Copy Files From" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Name="pnlApps" Margin="10"/>
            </ScrollViewer>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="btnOK" Content="Create Revision" Width="120" Height="30" Margin="5" Click="BtnOK_Click"/>
            <Button Name="btnCancel" Content="Cancel" Width="100" Height="30" Margin="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
