<Window x:Class="ProjectManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Engineering Project Manager" Height="750" Width="1400"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Background="#FF1E1E1E">
    <Window.Resources>
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="BackgroundDark" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="BackgroundMedium" Color="#FF252526"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#FF2D2D30"/>
        <SolidColorBrush x:Key="BorderColor" Color="#FF3F3F46"/>
        <SolidColorBrush x:Key="TextLight" Color="#FFE0E0E0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#FF9D9D9D"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF0E639C"/>
        <SolidColorBrush x:Key="AccentHover" Color="#FF1177BB"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="CaretBrush" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#FF0E639C"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="RowBackground" Value="#FF252526"/>
            <Setter Property="AlternatingRowBackground" Value="#FF2D2D30"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="#FF4F4F56"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
            <Setter Property="Background" Value="#FF252526"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF0E639C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFE0E0E0"/>
        </Style>
        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="#FF252526"/>
        </Style>
    </Window.Resources>

    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10">
        <StackPanel Orientation="Horizontal">
            <Button Name="btnNewProject" Content="New Project" Width="110" Height="32" Margin="5" Click="BtnNewProject_Click"/>
            <Button Name="btnNewRevision" Content="New Revision" Width="110" Height="32" Margin="5" Click="BtnNewRevision_Click"/>
            <Button Name="btnManageApps" Content="Manage Apps" Width="110" Height="32" Margin="5" Click="BtnManageApps_Click"/>
            <Button Name="btnSettings" Content="Settings" Width="110" Height="32" Margin="5" Click="BtnSettings_Click"/>
            <Button Name="btnRefresh" Content="Refresh" Width="90" Height="32" Margin="5" Click="BtnRefresh_Click"/>
        </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Projects List -->
            <GroupBox Grid.Column="0" Header="Projects">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBox Name="txtSearch" Grid.Row="0" Margin="5,5,5,10" Height="25"
                             TextChanged="TxtSearch_TextChanged"
                             Foreground="Gray" Text="Search projects..."/>

                    <ListBox Name="lstProjects" Grid.Row="1" Margin="5"
                             SelectionChanged="LstProjects_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="13"/>
                                    <TextBlock Text="{Binding DateCreated, StringFormat='Created: {0:yyyy-MM-dd}'}"
                                               FontSize="11" Foreground="#FF9D9D9D"/>
                                    <TextBlock Text="{Binding Status}" FontSize="11" Foreground="#FF3794FF"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </GroupBox>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#FF3F3F46"/>

            <!-- Project Details -->
            <TabControl Grid.Column="2" Name="tabControl" Margin="5" SelectionChanged="TabControl_SelectionChanged">
                
                <!-- Overview Tab -->
                <TabItem Header="Overview">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <GroupBox Header="Project Information">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Project Number:" Margin="5" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Name="txtProjectNumber" Margin="5" FontWeight="Bold" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Project Name:" Margin="5" VerticalAlignment="Center"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" Name="txtProjectName" Margin="5" LostFocus="TxtProjectName_LostFocus"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Date Created:" Margin="5" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Name="txtDateCreated" Margin="5" VerticalAlignment="Center"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" Margin="5" VerticalAlignment="Center"/>
                                    <ComboBox Grid.Row="3" Grid.Column="1" Name="cmbStatus" Margin="5" Height="25" Background="White" Foreground="Black" SelectionChanged="CmbStatus_SelectionChanged">
                                        <ComboBoxItem Content="Planning"/>
                                        <ComboBoxItem Content="In Progress"/>
                                        <ComboBoxItem Content="Review"/>
                                        <ComboBoxItem Content="Complete"/>
                                        <ComboBoxItem Content="On Hold"/>
                                        <ComboBoxItem Content="Cancelled"/>
                                    </ComboBox>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Apps Used:" Margin="5" VerticalAlignment="Top" Padding="0,5,0,0"/>
                                    <StackPanel Grid.Row="4" Grid.Column="1" Name="pnlAppsUsed" Margin="5"/>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Issues/Notes:" Margin="5" VerticalAlignment="Top" Padding="0,5,0,0"/>
                                    <TextBox Grid.Row="5" Grid.Column="1" Name="txtIssues" Margin="5" Height="80" 
                                             TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                             LostFocus="TxtIssues_LostFocus"/>
                                </Grid>
                            </GroupBox>

                            <GroupBox Header="Project Notes" Margin="0,10,0,0">
                                <StackPanel Margin="10" Orientation="Horizontal">
                                    <Button Name="btnOpenOverview" Content="Open Overview"
                                            Margin="5" Click="BtnOpenOverview_Click" Width="110"/>
                                    <Button Name="btnRefreshOverview" Content="Refresh"
                                            Margin="5" Click="BtnRefreshOverview_Click" Width="80"/>
                                    <Button Name="btnRegenerateOverview" Content="Regenerate"
                                            Margin="5" Click="BtnRegenerateOverview_Click" Width="90"/>
                                    <Button Name="btnPrintOverview" Content="Print"
                                            Margin="5" Click="BtnPrintOverview_Click" Width="70"/>
                                    <Button Name="btnAddTodoItem" Content="Add TODO"
                                            Margin="5" Click="BtnAddTodoItem_Click" Width="90"/>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Quick Actions" Margin="0,10,0,0">
                                <StackPanel Margin="10">
                                    <Button Name="btnOpenProjectRoot" Content="Open Engineering Root Folder"
                                            Margin="5" Click="BtnOpenProjectRoot_Click" HorizontalAlignment="Left" Width="250"/>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Project Management" Margin="0,10,0,0">
                                <StackPanel Margin="10" Orientation="Horizontal">
                                    <Button Name="btnRenameProject" Content="Rename Project"
                                            Margin="5" Click="BtnRenameProject_Click" Width="120"/>
                                    <Button Name="btnDeleteProject" Content="Delete Project"
                                            Margin="5" Click="BtnDeleteProject_Click" Width="120" Background="#FF9C2D0E"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Files Tab -->
                <TabItem Header="Files">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,5">
                            <Button Name="btnRefreshFiles" Content="Refresh Files" Width="120" Margin="5" Click="BtnRefreshFiles_Click"/>
                            <Button Name="btnOpenAllFolders" Content="Open All Folders" Width="120" Margin="5" Click="BtnOpenAllFolders_Click"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Name="pnlFiles" Margin="10"/>
                        </ScrollViewer>
                    </Grid>
                </TabItem>

                <!-- Datasheets Tab -->
                <TabItem Header="Datasheets">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="10" Orientation="Horizontal">
                            <Button Name="btnAddDatasheet" Content="Link Datasheet" Width="130" Margin="5" Click="BtnAddDatasheet_Click"/>
                            <Button Name="btnRemoveDatasheet" Content="Remove Link" Width="130" Margin="5" Click="BtnRemoveDatasheet_Click"/>
                            <Button Name="btnOpenDatasheetFolder" Content="Open Datasheet Folder" Width="170" Margin="5" Click="BtnOpenDatasheetFolder_Click"/>
                        </StackPanel>

                        <DataGrid Grid.Row="1" Name="dgDatasheets" Margin="10" AutoGenerateColumns="False" 
                                  IsReadOnly="True" SelectionMode="Single" MouseDoubleClick="DgDatasheets_MouseDoubleClick">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Filename" Binding="{Binding FileName}" Width="*"/>
                                <DataGridTextColumn Header="Size" Binding="{Binding FileSize}" Width="100"/>
                                <DataGridTextColumn Header="Date Modified" Binding="{Binding DateModified, StringFormat='yyyy-MM-dd HH:mm'}" Width="150"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- To-Do List Tab -->
                <TabItem Header="To-Do List">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                            <Button Name="btnAddTask" Content="Add Task" Width="100" Margin="5" Click="BtnAddTask_Click"/>
                            <Button Name="btnToggleTask" Content="Toggle Done" Width="100" Margin="5" Click="BtnToggleTask_Click"/>
                            <Button Name="btnDeleteTask" Content="Delete Task" Width="100" Margin="5" Click="BtnDeleteTask_Click"/>
                            <Button Name="btnRefreshTasks" Content="Refresh" Width="80" Margin="5" Click="BtnRefreshTasks_Click"/>
                            <Button Name="btnOpenOverviewFromTasks" Content="Open File" Width="80" Margin="5" Click="BtnOpenOverview_Click"/>
                        </StackPanel>

                        <DataGrid Grid.Row="1" Name="dgTasks" Margin="10" AutoGenerateColumns="False"
                                  SelectionMode="Single" CanUserAddRows="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Done" Binding="{Binding Status}" Width="50"/>
                                <DataGridTextColumn Header="Date" Binding="{Binding Timestamp}" Width="130"/>
                                <DataGridTextColumn Header="Task" Binding="{Binding Description}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

            </TabControl>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#FF007ACC">
            <StatusBarItem>
                <TextBlock Name="txtStatus" Text="Ready" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
